<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Library.ViewModels"
             x:Class="Library.Views.BookManagingView"
             x:DataType="vm:BookManagingViewModel">
	<Design.DataContext>
		<vm:BookManagingViewModel />
	</Design.DataContext>
	<StackPanel>
		<TextBlock Text="{Binding Testing}" Background="Aqua"/>

		<ItemsControl ItemsSource="{Binding Buttons}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding}" Width="150" Height="50" Margin="5"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

	</StackPanel>
</UserControl>